<% layout('../layout') -%>
<% stylesheet('/css/site.css') -%>
<% block('scripts', '<script data-main="/js/main" src="/components/requirejs/require.js"></script>') -%>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar"
         ng-init="isNavBarCollapsed = true"
         ng-click="isNavBarCollapsed = !isNavBarCollapsed"
         ng-show="searchBarTemplateUrl">
        <i class="icon-align-justify"></i>
      </a>
       
      <a class="brand" href="/"><%= appName %></a>
      <div class="pull-right" ng-include="userMenuTemplateUrl"></div>
       
      <div class="nav-collapse collapse navbar-responsive-collapse"
           collapse="isNavBarCollapsed">
        <div ng-include="searchBarTemplateUrl"></div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="content" ng-view></div>
  <div ng-include="audioPlayerBarTemplateUrl"></div>
</div>
