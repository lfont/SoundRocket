<% layout('../layout') -%>

<div class="container">
  <div class="content">
    <div class="text-center">
      <h1><%= appName %></h1>
    </div>

    <div class="row-fluid">
      <div class="span8 offset2 push-top">
        <% if (success) { %>
          <div class="well well-large well-transparent">
            <i class="icon-info icon-4x icon-muted pull-left"></i>
            You are now logged in.<br />
            This window will clause in a few second, enjoy!
          </div>
        <% } else { %>
          <div class="well well-large well-transparent">
            <i class="icon-warning-sign icon-4x icon-muted pull-left"></i>
            Login failed!<br />
            If the window doesn't close automatically, close it and try again.
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
  setTimeout(function () {
    window.opener.setAuthResult(<%= success %>);
    window.close();
  }, 1500);
</script>
